program new;
{$i gauss.simba}

function strofchar(s: char; num: Integer): String;
var
  i: Integer;
begin
  Result := '';
  for i := 1 to num do
    Result := Result + s;
end;

function MaxA(a: TIntegerArray): Integer;
var
  L, i: Integer;
begin
  L := High(a);
  if (L < 0) then
  begin
    Result := -1;
    exit;
  end;

  Result := a[0];

  for i := 1 to L do
    if (a[i] > Result) then
      Result := a[i];
end;

var
  x,err,i,ma: Integer;
  vals: TIntegerArray;

begin
 {
  setupn2Gauss();
 }
  SRL_GaussRand := @weequ_gauss;
  setLength(vals, 41);

  for i := 0 to 100000 do
  begin

    x := iGaussRange(-20, 20);
    if (inRange(x, -20, 20)) then
      inc(vals[x+20]) else
      inc(err);
    //WriteLn(Format('%3d: iGaussRange(-20, 20) = %d', [i, x]));
  end;

  ma := MaxA(vals);

  for i := 0 to 40 do
    WriteLn(Format('%2.0d:%s [%d]', [i-20, strofchar('=', round(vals[i]*60.0/ma)), vals[i]]));
  WriteLn(Format('Errors: %d', [err]));
end.
